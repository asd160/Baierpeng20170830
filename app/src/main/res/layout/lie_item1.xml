<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item1_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/rl_item1"
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <TextView
            android:id="@+id/item1_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:maxLines="2"
            android:textSize="17dp"
            android:textColor="#333333"
            android:text="TextView" />

        <TextView
            android:id="@+id/item1_tv_wang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="#888888"
            android:textSize="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/item1_tv_title"
            android:layout_alignStart="@+id/item1_tv_title" />

        <TextView
            android:id="@+id/item1_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_alignBaseline="@+id/item1_tv_wang"
            android:layout_alignBottom="@+id/item1_tv_wang"
            android:layout_alignParentRight="true"
            android:textColor="#888888"
            android:textSize="11dp"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</LinearLayout>
